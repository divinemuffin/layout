    "watch-css": "node-sass -w -r ../public/scss/ -o ../public/styles/",
    "rebuild-sass": "npm rebuild node-sass"
  },
  "dependencies": {
    "firebase-admin": "~5.13.0",
    "firebase-functions": "^2.1.0",
    "nodemailer": "^4.6.7"
  },
  "private": true,
  "devDependencies": {
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.9"
  }
}
